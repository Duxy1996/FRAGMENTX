<div class="nested-fields card">
    <div class="card-body">
        <%= f.label :name %><br/>
        <%= f.text_field :name, class: 'form-control' %>
        <br/>
        <%= f.label :description %><br/>
        <%= f.text_area :description, class: 'form-control' %>
        <br/>
        <%= f.label :matrix %><br/>
        <%= f.text_field :matrix, class: 'form-control' %>
        <br/>
        <%= f.check_box :missing %> <%= f.label :missing %>
        <br/>
        <%= f.label :model %>
        <%= f.file_field :model, :required => true, class:'form-control' %>
        <%= f.hidden_field :restored_object_id, value: @object.id %>
        <br/>
        <%= link_to_remove_association f, {class:'btn btn-danger', aria: {label: t('restored_object.remove_piece')}} do %>Eliminar Pieza<% end %>
    </div>
    <br/>
</div>