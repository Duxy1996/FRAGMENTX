<div class="container">
    <%= link_to t('restored_object.add_object'), new_restored_object_path, class: 'btn btn-primary right' %>
    <h1><%= t('activerecord.models.restored_object.other') %></h1>
    <% @objects.each do |obj| %>
        <div class="card">
            <div class="card-body">
                <h2>
                    <%= link_to obj.title, obj, data: { no_turbolink: true } %> <span class="badge badge-pill badge-info"><%= obj.pieces.count %> <%= t('restored_object.pieces') %> </span>
                </h2>
                <p><%= obj.description %>
            </div>
            <div class="card-footer">
                <%= time_ago_in_words obj.created_at %>
            </div>
        </div>
        <br/>
    <% end %>
</div>